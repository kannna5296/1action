# Discord Bot Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# メインのチャンネルID（タスク確認用）
CHANNEL_ID=1234567890123456789

# Botが最初に問いかけてくるチャンネルID（オプション）
# 設定しない場合はCHANNEL_IDと同じチャンネルが使用されます
INITIAL_CHANNEL_ID=1234567890123456789

# スケジューラー設定
# スケジューラータイプ: "cron" または "interval"
SCHEDULER_TYPE=cron

# Cron型の場合の実行時刻（時,分）
CRON_TIME=7,30

# Interval型の場合の実行間隔（分）
INTERVAL_MINUTES=60

# 通知対象ユーザーID（カンマ区切りで複数指定可能）
NOTIFY_USER_IDS=1234567890123456789,9876543210987654321
